[client]
port                    = 3306
socket                  = /var/run/mysqld.sock
default-character-set	= utf8

[mysqld]
user                    = root
socket                  = /var/run/mysqld.sock
pid_file                = /var/run/mysqld.pid
log_error               = /var/log/mysqld.log
port                    = 3306
basedir                 = /usr
datadir                 = /data/mysql/
tmpdir                  = /tmp/
skip-external-locking   = true
bind-address            = 127.0.0.1
event_scheduler         = on
default-character-set	= utf8

# Fine Tuning
key_buffer              = 16M
max_allowed_packet      = 16M
thread_stack            = 192K
thread_cache_size       = 8

[mysqldump]
quick
quote-names
max_allowed_packet      = 16M

[isamchk]
key_buffer              = 16M
